<article class="tarjeta tarjeta--destacados">
    <section class="detalle-container">
      
        <div class="contenedor-image">
            <img class="image" src="/<%= producto.img %>" alt="Miel">
        </div>
        <div class="detalle-producto">
          <h1><%= producto.title %></h1>

          <div class="descripcion-producto">
            <p><%= producto.description %></p>
          </div>
      
          <div class="contenedor-producto">
            <% if (locals.isLogged && locals.userLogged.user_role_id == 2){%>
              <div class="descripcion-producto">
                <h3 class="stock-productos">stock:<p><%= producto.stock %></p></h3>
              </div>
            <% } %>

            <div class="precio-producto">
                <p>$<%= producto.cost %></p>
            </div>

            <div class="boton-agregar-carro">
              <a class="link" href="/productos/carrito">
                <button class="tarjeta__boton boton--buy boton">
                  <i class="icono icono--carrito fa-solid fa-cart-shopping"></i>
                  Agregar al carro
                </button>
              </a>
            </div>
          </div>
        </div>
        
      </section>
</article>

