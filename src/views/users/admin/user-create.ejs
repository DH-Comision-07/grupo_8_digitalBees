<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../partials/head', {css:'/css/product-create-edit.css'}); %>
</head>

<body>
    <%- include('../../partials/header'); %>
        <main class="principal">
            <section class="principal__section section--migadepan">
                <div class="contenedor contenedor--migadepan">
                  <%- include('../../partials/breadcrumb', {local: 'Crear'}); %>
                </div>
              </section>
            <div class="contenedor contenedor--crear">
                <div class="contenedor-formulario">
                    <h2 class="titleOne">Crear Usuario</h2>
                    <form action="/usuarios" method="POST" class="form-create" enctype="multipart/form-data">
                    <div>
                        <div>
                            <label for="email">Email
                                    <input type="text" class="input-text" placeholder="Email" name="email"
                                        id="email" required />
                                </label>
                                <label for="password">Password
                                    <input type="text" class="input-text" placeholder="password" name="password"
                                        id="password" required />
                                </label>
                                <label for="first_name">Nombre
                                    <input type="text" class="input-text" placeholder="Nombre" name="first_name"
                                        id="first_name" required />
                                </label>
                                <label for="last_name">Apellido
                                    <input type="text" class="input-text" placeholder="Apellido" name="last_name"
                                        id="last_name" required />
                                </label>
                            </div>
                            <div>
                                <label for="country" class="form-label">Pais:</label>
                                <select name="country" id="country" class="form-input" required>
                                    <option value="">Elige</option>
                                    <option value="argentina">Argentina</option>
                                    <option value="colombia">Colombia</option>
                                    <option value="mexico">Mexico</option>
                                </select>
                            </div>
                            <div>
                                <label for="city" class="form-label">Ciudad:</label>
                                <select name="city" id="city" class="form-input" required>
                                    <option value="">Elige</option>
                                    <option value="buenosAires">Buenos Aires</option>
                                    <option value="cordoba">Córdoba</option>
                                    <option value="rosario">Rosario</option>
                                    <option value="bogota">Bogotá</option>
                                    <option value="medellin">Medellín</option>
                                    <option value="cali">Cali</option>
                                    <option value="cdMexico">Ciudad de Mexico</option>
                                    <option value="guadalajara">Guadalajara</option>
                                    <option value="monterrey">Monterrey</option>
                                </select>
                            </div>
                            <div>
                                <label for="address">Dirección
                                    <input type="text" class="input-text" placeholder="Dirección" name="address"
                                        id="address" required />
                                </label>
                            </div>
                            <div>
                                <label for="phone_number">Telefono
                                    <input type="text" class="input-text" placeholder="Telefono" name="phone_number"
                                        id="phone_number" required />
                                </label>
                            </div>
                            <div>
                                <label for="profile_picture">Foto de perfil</label>
                                <input type="file" name="profile_picture" />
                            </div>
                            <label for="account_status">Status:</label> 
                                    <div class="checkbox-container yellow">
                                        <input type="checkbox" id="account_status" name="account_status" <%= isChecked === 1 ? 'checked' : '' %> />
                                        <label for="account_status"></label>
                                    </div>
                                <div>

                            <label for="rolID">Rol: </label>
                        <p>
                            <select name="user_role_id" class="form-input" id="" required>
                                <option value="" disabled selected>- selecciona rol - </option>
                                <% roles.forEach(rol => { %>
                                <option value="<%= rol.id %>"><%= rol.role %></option>
                                <% }); %>
                            </select>
                        </p>
                        <br>
                            
                            <button type="submit" class="submit">Agregar Usuario</button>
                        </div>
                    </form>
                </div>
            </div>
        </main>
        <%- include('../../partials/footer'); %>
            <%- include('../../partials/scripts'); %>
</body>

</html>